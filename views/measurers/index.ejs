<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>

<body>

<% include ../partials/header %>


<!-- Page Content -->
<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron hero-spacer" style="background-image: url('/img/portfolio/valveBox/valve.jpg');">
        <h1 style="color: black">Medidores de agua</h1>
    </header>
    <h1>Descripcion del producto</h1>
    <p>Contenido de la descripción.</p>


    <a href="form" class="btn btn-primary">Cotizar ahora!</a>


    <hr>

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Catalogo</h3>
        </div>
    </div>
    <!-- /.row -->

    <!-- Page Features -->
    <div class="row">
        <% measurers.forEach(function(product) { %>
        <div class="col-sm-3  col-md-4 col-lg-4">
            <div class="thumbnail">
                <img src="http://placehold.it/320x150" alt="">
                <div class="caption">
                    <h4><a href="#">Medidor</a>
                    </h4>
                    <div class="row">
                        <div class="col-md-4">
                            <h5>Alto de pared <b>(m)</b>:</h5><p><%= product.wall_heigth%></p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fa fa-tachometer" aria-hidden="true"></i> Número de medidores:</h5><p><%= product.measurer_number%></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2014</p>
            </div>
        </div>
    </footer>

</div>
<% include ../partials/footer %>
</body>

</html>

